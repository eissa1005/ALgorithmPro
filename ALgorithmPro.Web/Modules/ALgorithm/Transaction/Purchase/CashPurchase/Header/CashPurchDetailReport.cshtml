@model ALgorithmPro.ALgorithm.CashPurchDetailReportData

@if ((bool?)ViewData["Printing"] == true)
{
    Layout = MVC.Views.Shared._LayoutNoNavigation;
}

<section class="invoice">
    <div class="row">
        <div class="col-xs-12">
            <h2 class="page-header">
                Invoice
                <small class="pull-right">Date: @DateTime.Now.ToShortDateString()</small>
            </h2>
        </div>
    </div>
    <!-- info row -->
    <div class="row invoice-info">
        <div class="col-sm-4 invoice-col">
            From
            <address>
                <strong>ALgorithmPro, Inc.</strong>
                <br>Cash Purchase<br>
                <br>Phone: 0108406888<br>
                Email: info@AlgorithmPro.net
            </address>
        </div>
        <div class="col-sm-4 invoice-col">
            <b>Invoice #IX@(Model.ASTRH.TR_NO)</b><br>
            <br>
            <b>Supplier:</b> @Model.ASTRH.ACC_NAME<br>
            <b> Date :</b> @Model.ASTRH.TR_DT.Value.ToShortDateString()<br>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- Table row -->
    <div class="row">
        <div class="col-xs-12 table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Item Code</th>
                        <th>Item Name</th>
                        <th>Package</th>
                        <th>QTY</th>
                        <th>Price</th>
                        <th>Value</th>
                        <th>Disc</th>
                        <th>NetAfterTAX</th>
                        <th>TAX</th>
                        <th>NET</th>
                        <th>NetBeforeTAX</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model.Details)
                    {
                        <tr>
                            <td>@d.Item_CD</td>
                            <td>@d.ITM_NM_AR</td>
                            <td>@d.PKName</td>
                            <td>@d.QTY</td>
                            <td>@(d.Price.ToStringDefault("#,##0.00"))</td>
                            <td>@(d.Value.ToStringDefault("#,##0.00"))</td>
                            <td>@(d.DISC.ToStringDefault())</td>
                            <td>@(d.NetAfterTAX.ToStringDefault("#,##0.00"))</td>
                            <td>@(d.STAX_VL.ToStringDefault())</td>
                            <td>@(d.NET.ToStringDefault("#,##0.00"))</td>
                            <td>@(d.NetBeforeTAX.ToStringDefault("#,##0.00"))</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.col -->
    </div>

    <div class="row">
        <div class="col-xs-6">

        </div>
        <!-- /.col -->
        <div class="col-xs-6">
            <p class="lead">Amount Due @(Model.ASTRH.TR_DT.Value.AddDays(10).ToShortDateString())</p>

            @{
                var subTotal = Model.Details.Sum(x => x.NET ?? 0);
            }

            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th style="width:50%">Subtotal:</th>
                        <td>$@subTotal.ToString("#,##0.00")</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</section>